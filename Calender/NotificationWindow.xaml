<Window x:Class="Calender.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" Height="270" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None">

    <Window.Background>
        <SolidColorBrush Color="#3e5ea8"/>
    </Window.Background>

    <Border BorderBrush="#3ea85a" BorderThickness="4" >
        <StackPanel Margin="20">
            <TextBlock Text="Notification" FontWeight="Bold" FontSize="30"
                       HorizontalAlignment="Center" Margin="0,0,0,10" />
            <TextBlock Name="NotificationText" Text="You have tasks for today!" 
                       TextWrapping="Wrap" TextAlignment="Center" FontSize="24" />
            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Content="OK" FontSize="30" Width="160" Height="75"
                        Click="Button_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>